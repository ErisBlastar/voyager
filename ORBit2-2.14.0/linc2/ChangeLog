	(af_unix_destroy): renamed to linc_protocol_unix_destroy.
	(protocol_ents): renamed to static_linc_protocols.
	(linc_protocol_get_sockinfo_ipv46, 
	 linc_protocol_get_sockinfo_ipv4,
	 linc_protocol_get_sockinfo_ipv6,
